{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["*"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "shell:allow-open",
    "appearance:default",
    "clipboard-manager:allow-write-html",
    "clipboard-manager:allow-write-text",
    "udp:default",
    "tcp:default",
    "mqtt:default"
  ]
}
